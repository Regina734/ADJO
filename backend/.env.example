# Application
APP_NAME=Adjo
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://adjo_user:adjo_password@localhost:5432/adjo_db
DATABASE_MAX_CONNECTIONS=100
DATABASE_MIN_CONNECTIONS=5

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=3600
JWT_REFRESH_TOKEN_EXPIRY=2592000

# Bcrypt
BCRYPT_COST=12

# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# OTP
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=5
OTP_LENGTH=5

# Stellar Blockchain
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_MASTER_SECRET=your_master_stellar_secret_key
STELLAR_PASSPHRASE=Test SDF Network ; September 2015

# Encryption (pour private keys)
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_MAX_AGE=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
